<Window x:Class="BD.Window8"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BD"
        mc:Ignorable="d"
        Title="Window8" Height="450" Width="800">
    <Grid Height="419" VerticalAlignment="Bottom">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Никнейм пользователя" FontSize="18" Margin="10,10,583,383"/>
        <TextBlock FontSize="18" Margin="34,200,612,193"><Run Text="Введите "/><Run Text="логин"/></TextBlock>
        <TextBox x:Name="NicknameTB" Margin="214,10,384,383"/>
        <Button x:Name="BtnReg" Content="Зарегистрироваться" Margin="213,340,369,25" FontSize="22" Background="#FFFD6007" Click="BtnReg_Click"/>
        <TextBlock Text="Телефон" FontSize="18" Margin="64,56,652,337"/>
        <TextBox x:Name="PhoneTB" Margin="213,56,385,337"/>
        <TextBlock Text="Адресс" FontSize="18" Margin="64,101,668,292"/>
        <TextBox x:Name="AdressTB" Margin="213,101,385,292"/>
        <TextBlock Text="Возраст" FontSize="18" Margin="64,151,652,242"/>
        <TextBox x:Name="AgeTB" Margin="213,151,385,242"/>
        <TextBox x:Name="LoginTB" Margin="214,200,384,193"/>
        <TextBlock FontSize="18" Margin="34,248,612,145"><Run Text="Введите "/><Run Text="пароль"/></TextBlock>
        <TextBox x:Name="PassTB" Margin="214,248,384,145"/>
        <Button Content="Назад" HorizontalAlignment="Right" Name="Btnback" Click="BtnBack_Click" Height="54" VerticalAlignment="Bottom" RenderTransformOrigin="-0.553,-0.345" Margin="0,0,22,341" Width="89"/>
        <TextBlock FontSize="18" Margin="64,295,622,98" Text="Ваша роль"/>
        <TextBox x:Name="RollTB" Margin="213,295,385,98" Text="Пользователь" IsEnabled="False"/>
    </Grid>


</Window>
